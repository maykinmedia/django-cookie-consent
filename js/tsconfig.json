{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2017",
    "module": "esnext",
    "outDir": "lib",
    "declaration": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"],
}
